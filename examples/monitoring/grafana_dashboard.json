{
  "dashboard": {
    "title": "MCP Game League - Production Monitoring",
    "tags": ["mcp", "game", "production"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate (req/s)",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(game_requests_total[1m])",
            "legendFormat": "{{type}} - {{server_type}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "yaxes": [
          {
            "format": "reqps",
            "label": "Requests/sec"
          }
        ]
      },
      {
        "id": 2,
        "title": "Request Duration (p50, p90, p99)",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(game_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.90, rate(game_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p90",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(game_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "yaxes": [
          {
            "format": "s",
            "label": "Duration"
          }
        ]
      },
      {
        "id": 3,
        "title": "Active Games",
        "type": "stat",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "active_games",
            "refId": "A"
          }
        ],
        "gridPos": {
          "x": 0,
          "y": 8,
          "w": 6,
          "h": 4
        },
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      {
        "id": 4,
        "title": "Total Games Played",
        "type": "stat",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "games_total",
            "refId": "A"
          }
        ],
        "gridPos": {
          "x": 6,
          "y": 8,
          "w": 6,
          "h": 4
        },
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      {
        "id": 5,
        "title": "Total Rounds Played",
        "type": "stat",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "game_rounds_total",
            "refId": "A"
          }
        ],
        "gridPos": {
          "x": 12,
          "y": 8,
          "w": 6,
          "h": 4
        },
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      {
        "id": 6,
        "title": "Strategy Decisions",
        "type": "stat",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "strategy_decisions_total",
            "refId": "A"
          }
        ],
        "gridPos": {
          "x": 18,
          "y": 8,
          "w": 6,
          "h": 4
        },
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      {
        "id": 7,
        "title": "Error Rate (%)",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(game_requests_total{status=\"error\"}[5m]) / rate(game_requests_total[5m]) * 100",
            "legendFormat": "Error Rate",
            "refId": "A"
          }
        ],
        "gridPos": {
          "x": 0,
          "y": 12,
          "w": 12,
          "h": 8
        },
        "yaxes": [
          {
            "format": "percent",
            "label": "Error Rate",
            "max": 100,
            "min": 0
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [5],
                "type": "gt"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "name": "High Error Rate Alert"
        }
      },
      {
        "id": 8,
        "title": "Strategy Decision Duration",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(strategy_decision_duration_seconds_bucket[5m]))",
            "legendFormat": "p95 decision time",
            "refId": "A"
          }
        ],
        "gridPos": {
          "x": 12,
          "y": 12,
          "w": 12,
          "h": 8
        },
        "yaxes": [
          {
            "format": "s",
            "label": "Duration"
          }
        ]
      },
      {
        "id": 9,
        "title": "Event Bus Activity",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(event_bus_events_total[1m])",
            "legendFormat": "Events/sec",
            "refId": "A"
          }
        ],
        "gridPos": {
          "x": 0,
          "y": 20,
          "w": 12,
          "h": 8
        },
        "yaxes": [
          {
            "format": "ops",
            "label": "Events/sec"
          }
        ]
      },
      {
        "id": 10,
        "title": "Plugins Loaded",
        "type": "stat",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "plugins_loaded",
            "refId": "A"
          }
        ],
        "gridPos": {
          "x": 12,
          "y": 20,
          "w": 6,
          "h": 4
        },
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "textMode": "value_and_name"
        }
      },
      {
        "id": 11,
        "title": "Plugin Load Errors",
        "type": "stat",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "plugin_load_errors_total",
            "refId": "A"
          }
        ],
        "gridPos": {
          "x": 18,
          "y": 20,
          "w": 6,
          "h": 4
        },
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "textMode": "value_and_name"
        },
        "thresholds": {
          "mode": "absolute",
          "steps": [
            {
              "value": 0,
              "color": "green"
            },
            {
              "value": 1,
              "color": "red"
            }
          ]
        }
      },
      {
        "id": 12,
        "title": "Middleware Errors",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(middleware_errors_total[5m])",
            "legendFormat": "Middleware Errors/sec",
            "refId": "A"
          }
        ],
        "gridPos": {
          "x": 12,
          "y": 24,
          "w": 12,
          "h": 8
        },
        "yaxes": [
          {
            "format": "ops",
            "label": "Errors/sec"
          }
        ]
      },
      {
        "id": 13,
        "title": "Middleware Duration",
        "type": "graph",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "histogram_quantile(0.90, rate(middleware_duration_seconds_bucket[5m]))",
            "legendFormat": "p90 middleware time",
            "refId": "A"
          }
        ],
        "gridPos": {
          "x": 0,
          "y": 24,
          "w": 12,
          "h": 8
        },
        "yaxes": [
          {
            "format": "s",
            "label": "Duration"
          }
        ]
      },
      {
        "id": 14,
        "title": "Requests by Type",
        "type": "piechart",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "sum by (type) (game_requests_total)",
            "legendFormat": "{{type}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "x": 0,
          "y": 32,
          "w": 12,
          "h": 8
        },
        "options": {
          "pieType": "pie",
          "displayLabels": ["percent"]
        }
      },
      {
        "id": 15,
        "title": "Requests by Server Type",
        "type": "piechart",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "sum by (server_type) (game_requests_total)",
            "legendFormat": "{{server_type}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "x": 12,
          "y": 32,
          "w": 12,
          "h": 8
        },
        "options": {
          "pieType": "pie",
          "displayLabels": ["percent"]
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "server_type",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(game_requests_total, server_type)",
          "multi": true,
          "includeAll": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "changes(games_total[5m]) > 0",
          "name": "Game Started"
        }
      ]
    }
  }
}

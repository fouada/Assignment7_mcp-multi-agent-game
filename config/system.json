{
  "schema_version": "1.0.0",
  "system_id": "league_system_prod",
  "protocol_version": "league.v2",
  "environment": "development",
  "debug": false,
  "log_level": "INFO",
  "data_path": "data",
  "logs_path": "logs",
  "timeouts": {
    "move_timeout_sec": 30,
    "generic_response_timeout_sec": 10,
    "referee_register": 10,
    "league_register": 10,
    "game_join_ack": 5,
    "choose_parity": 30,
    "game_over": 5,
    "match_result_report": 10,
    "league_query": 10,
    "default": 10
  },
  "retry_policy": {
    "max_retries": 3,
    "backoff_strategy": "exponential",
    "base_delay_sec": 1.0,
    "max_delay_sec": 30.0
  },
  "network": {
    "host": "localhost",
    "base_port": 8000
  },
  "security": {
    "token_ttl_hours": 24,
    "require_auth": true
  }
}

# MANIFEST.in - Include additional files in the package distribution
# ======================================================================

# Documentation
include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md
include CODE_OF_CONDUCT.md
include SECURITY.md
include ARCHITECTURE.md

# Configuration files
include pyproject.toml
include Makefile
include mypy.ini
include .python-version

# Configuration templates
recursive-include config *.yaml *.yml *.json *.toml
recursive-include config *.example

# Documentation
recursive-include docs *.md *.rst *.txt
recursive-include docs *.png *.jpg *.jpeg *.gif *.svg
recursive-include docs *.pdf

# Examples
recursive-include examples *.py *.md *.yaml *.json
recursive-include examples *.sh

# Research materials
recursive-include paper *.tex *.bib *.pdf
recursive-include proofs *.md *.tex *.pdf
recursive-include research *.py *.md *.json *.csv

# Scripts
recursive-include scripts *.sh *.py

# Tests (for development installations)
recursive-include tests *.py
recursive-include tests *.yaml *.json

# Exclude compiled and cache files
global-exclude *.py[cod]
global-exclude __pycache__
global-exclude *.so
global-exclude *.dylib
global-exclude .DS_Store
global-exclude *.log
global-exclude .pytest_cache
global-exclude .mypy_cache
global-exclude .ruff_cache
global-exclude htmlcov
global-exclude .coverage
global-exclude coverage.xml
global-exclude *.egg-info
global-exclude .git
global-exclude .github
global-exclude venv
global-exclude .venv
